{
    "extends": [
      "tslint:recommended",
      "tslint-react",
      "tslint-config-prettier",
      "tslint-plugin-prettier"
    ],
    "rulesDirectory": [
      "tslint-plugin-prettier"
    ],
    "rules": {
      "prettier": true,
      "interface-name": false,
      "semicolon": [true, "always", "ignore-interfaces"]
    }
  }